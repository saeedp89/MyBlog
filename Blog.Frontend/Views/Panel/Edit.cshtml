@model PostViewModel

<link href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.css" rel="stylesheet" />
<link href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet" />
<div>
    <form method="post" asp-controller="Panel" asp-action="Edit" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden"/>
        <input asp-for="CurrentImage" type="hidden"/>
        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title" type="text">
        </div>

        <div>
            <label asp-for="Description"></label>
            <input asp-for="Description" type="text">
        </div>
        <div>
            <label asp-for="Tags"></label>
            <input asp-for="Tags" type="text" value="">
        </div>
        <div>
            <label asp-for="Category"></label>
            <select asp-for="Category">
                <option value="Travel">Travel</option>
                <option value="Programming">Programming</option>
                <option value="Photography">Photography</option>
            </select>
        </div>
        <div>
            <label>Body</label>
            <textarea id="editor" asp-for="Body"></textarea>
        </div>
        <div>
           @if (!string.IsNullOrWhiteSpace(Model.CurrentImage))
           {
               var imagePath = $"/image/{Model.CurrentImage}";
               <img src="@imagePath"/>

           } 
        </div>
        <div>
            <label>Image</label>
            <input asp-for="Image"/>
        </div>
        <input type="submit" value="submit">
    </form>
</div>
@section scripts {
    <script src="~/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg-main/dist/trumbowyg.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>

}