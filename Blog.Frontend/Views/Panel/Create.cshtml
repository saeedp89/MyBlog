@model PostViewModel

@{

}

<link href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.css" rel="stylesheet"/>
<link href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet"/>
<div>
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title" type="text">
        </div>
        <div>
            <label>Body</label>
        <textarea id="editor" asp-for="Body" type="text" value=""></textarea>
        </div>

        <div>
            <label>Description</label>
            <input asp-for="Description" type="text" value=""/>
        </div>
        <div>
            <label>Tags</label>
            <input asp-for="Tags" type="text" value=""/>
        </div>
        <div>
            <label>Category</label>

            <select asp-for="Category">
                <option value="0">Travel</option>
                <option value="1">Programming</option>
                <option value="2">Photography</option>
            </select>
        </div>
        <div>
            <label>Image</label>
            <input asp-for="Image"/>
        </div>
        <input type="submit" value="submit">
    </form>
</div>

@section scripts
{

    <script src="~/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg-main/dist/trumbowyg.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>
}